#welcome

  #preloader
    img(ng-src='images/oneline_logo_big.png')
    h4.form-signin-heading Setting up the application
    .span3
      .bar
    span.muted

  #login.boxed
    form(ng-submit='login()')

      img(ng-src='images/oneline_logo_big.png')

      h4.form-signin-heading Welcome back
      p(style='font-size: 12px; margin-bottom: 25px;')
        a(href='#register') Register an account

      .alert(ng-show='alert.login.display')
        button.close(type='button',
                      ng-click='alert.login=false') Ã—
        | {{alert.login.message}}

      input(type='text',
                  ng-model='logindata.username',
                  placeholder='Mobile number',
                  autofocus='autofocus')

      input(type='password',
            ng-model='logindata.password',
            placeholder='Password')

      label.checkbox.span3
        input(type='checkbox',
              ng-model='logindata.remember')
        | Remember me

      button.btn.btn-large.btn-primary(type='submit') {{ui.login.button_login}}

      p
        small
          a(href='#forgotpass') {{ui.login.forgot_password}}

      span.version v{{config.app.version}}